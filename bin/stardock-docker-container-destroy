#!/usr/bin/env bash
# vim:syn=sh
### Usage:
###    stardock-docker-container-destroy <container_name>
### --help
###
### This will stay persistent as long as the container stays running.  We'll
### run the full lifecycle of the container from here.
export DIR=$(cd $(dirname ${BASH_SOURCE[0]}) && pwd)
source "$DIR/stardock-launcher"

# Kill any dangling/orphaned images
ORPHANED_IMAGES=$(sudo docker images -f "dangling=true" -q)
[ -n "${ORPHANED_IMAGES}" ] && docker rmi $ORPHANED_IMAGES 

# Kill any container with this name
for container in $(docker ps -a --format '{{.Image}},{{.Names}}' | egrep ",${container_name}$"); do
  IMAGE_NAME=$(echo $container | cut -f1 -d',')
  FRIENDLY_NAME=$(echo $container | cut -f2 -d',')
  docker stop "${FRIENDLY_NAME}" > /dev/null
  info "docker-container-destroy|killing_container:${FRIENDLY_NAME}"
  docker rm "${FRIENDLY_NAME}"
done
